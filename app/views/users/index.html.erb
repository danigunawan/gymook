<h1> List of the users: </h1>

<ul class="user-list">
    <% @users.each do |user| %>
        <li>
            <strong>
                <%= link_to(user.full_name, edit_user_path(user.id), class: "text-secondary") %>
            </strong>

            <% if user_is_admin? %>
                â€¢
                <%= link_to(
                    "Delete User", 
                    user_path(user), 
                    method: :delete, 
                    data: {
                        confirm: "Are you sure you want to delete this user?"
                    },
                    class: "text-secondary" 
                ) %>
            <% end %>
        </li> <br>
    <% end %>
</ul>