<!DOCTYPE html>
<html>
  <head>
    <title>Gymook</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light text-primary" >
        <a href="#" class="navbar-brand text-secondary">Logo</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="toggle-navigation" >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collape navbar-collapse" id="navbarNav" >
          <ul class="navbar-nav" >
            <li class="nav-item" >
                <%= link_to("Home Page", root_path, class: "nav-link text-primary") %>
            </li>
            <% if can?(:view_new, @gym_class) %>
            <li class="nav-item" >
                <%= link_to("New Gym Class", new_gym_class_path, class: "nav-link text-primary") %>
            </li>
            <% end %>
            <li class="nav-item" >
                <%= link_to("Gym Classes", gym_classes_path, class: "nav-link text-primary" ) %>
            </li>
            <% if user_signed_in? %>
              <li class="nav-item" >
                Hi <%= current_user.first_name %>
              </li>
              <li class="nav-item" >
                <%= link_to(
                  "Log Out",
                  session_path,
                  method: :delete,
                  data: {
                    confirm: "Are you sure you want to Log Out?"
                  },
                  class: "nav-link text-primary"
                ) %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to("Sign In", new_session_path, class: "nav-link text-primary") %>
              </li>
              <li class="nav-item" >
                <%= link_to("Sign Up", new_user_path, class: "nav-link text-primary") %>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>

    <main class="container-fluid" >
      <% flash.each do |type, message| %>
        <div class="alert alert-<%= type %>">
          <%= message %>        
        </div>
      <% end %>

      <%= yield %>
    </main>
  </body>
</html>
