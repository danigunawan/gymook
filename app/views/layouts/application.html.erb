<!DOCTYPE html>
<html>
  <head>
    <title>Gymook</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light text-secondary" >
        <a href="#" class="navbar-brand text-secondary">Logo</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="toggle-navigation" >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav" >
          <ul class="navbar-nav" >
            <%#li class="nav-item" %>
                <%#= link_to("Home Page", root_path, class: "nav-link text-secondary") %>
            <%#/li%>
            <% if user_is_coach? %>
            <li class="nav-item" >
                <%= link_to("New Gym Class", new_gym_class_path, class: "nav-link text-secondary") %>
            </li>
            <li class="nav-item" >
                <%= link_to("Gym Classes", gym_classes_path, class: "nav-link text-secondary" ) %>
            </li>
            <li class="nav-item" >
              <%= link_to("Add a New Occurence", gym_classes_path , class: "nav-link text-secondary" ) %>
            </li>
            <li class="nav-item" >
              <%= link_to("All Users", users_path, class: "nav-link text-secondary" ) %>
            </li>
            <li class="nav-item">
              <%= link_to("Bookings", bookings_path, class: "nav-link text-secondary") %>
            </li>
            <% end %>
              <li class="nav-item" >
                  <%= link_to("All Occurences", occurences_path, class: "text-secondary nav-link") %>
              </li>
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to("Booked Occurences", booked_occurences_path, class: "nav-link text-secondary") %>
              </li>
              <li class="nav-item" >
                <%= link_to("Hi, #{current_user.first_name}", user_path(current_user), class: "nav-link text-secondary" ) %>
              </li>
              <li class="nav-item" >
                <%= link_to(
                  "Log Out",
                  session_path,
                  method: :delete,
                  data: {
                    confirm: "Are you sure you want to Log Out?"
                  },
                  class: "nav-link text-secondary"
                ) %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to("Sign In", new_session_path, class: "nav-link text-secondary") %>
              </li>
              <li class="nav-item" >
                <%= link_to("Sign Up", new_user_path, class: "nav-link text-secondary") %>
              </li>
              <li class="nav-item">
                <%= link_to("Contact Us", contact_us_path, class: "nav-link text-secondary") %>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>

    <main class="container-fluid" >
      <% flash.each do |type, message| %>
        <div class="alert alert-<%= type %>">
          <%= message %>        
        </div>
      <% end %>

      <%= yield %>
    </main>
  </body>
</html>
