<div class="card text-center" style="margin: auto; margin-top: 250px; max-width: 50rem;" >
    <div class="card-body">
        <h1 class="card-title">
        Sign In
        </h1>
        <%= form_with(url: session_path, local: true) do |f| %>
            <div class="form-group" >
                <%= f.label :email %>
                <%= f.email_field :email, class: "form-control" %>
            </div>

            <div class="form-group" >
                <%= f.label :password %>
                <%= f.password_field :password, class: "form-control" %>
            </div>
            <br>
            <%= f.submit "Sign In", class: "btn btn-secondary bg-light text-secondary" %>
        <% end %>
    </div>
</div>

