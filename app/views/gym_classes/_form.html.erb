
<%= form_with(model: @gym_class, local: true) do |f| %>

    <% if @gym_class.errors.present? %>
        <p class="form-errors" >
            <%= @gym_class.errors.full_messages.join(", ") %>
        </p>
    <% end %>

    <div>
        <%= f.label :class_type, class: "control-label" %> <br>
        <%= f.text_field :class_type, class: "form-control", placeholder: "Name the class you want to create" %>
    </div>
    <div>
        <%= f.label :description, class: "control-label" %> <br>
        <%= f.text_area :description, cols: 50, rows: 10, class: "form-control" %>
    </div>
    <div>
        <%= f.label :maximum_clients, class: "control-label" %> <br>
        <%= f.text_field :maximum_clients, class: "form-control" %>
    </div>
    <div>
        <%= f.label :cost, class: "control-label" %> <br>
        <%= f.text_field :cost, class: "form-control" %>
    </div>

    <%= f.submit "Create Gym Class", class: "m-2 btn btn-primary bg-light text-primary" %>
<% end %>
